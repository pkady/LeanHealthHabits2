<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.leanhealhabits.workouts.workouts.HabitsListActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:paddingBottom="16dp"
        android:text="Daily Habit Tracking and Compliace %" />

    <CheckBox
        android:id="@+id/fish_oil_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Took Fish Oil, Multi Vitamin, and Supplements"
        android:textSize="16sp"
        android:textAppearance="?android:textAppearanceMedium"
        android:paddingLeft="24sp"
        android:layout_marginBottom="24dp"/>

    <CheckBox
        android:id="@+id/meals_per_day_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ate Four + Meals per Day"
        android:textSize="16sp"
        android:textAppearance="?android:textAppearanceMedium"
        android:paddingLeft="24sp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="Compliance Summary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/compliance_text_view"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="% Compliant" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingTop="16dp"
        android:text="Calculate Compliance"
        android:onClick="calculateCompliance" />

</LinearLayout>

</ScrollView>